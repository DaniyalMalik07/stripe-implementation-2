<div id="<%= dom_id product %>">
  <p>
    <strong>Name:</strong>
    <%= product.name %>
  </p>

  <p>
    <strong>Price:</strong>
    <%= number_to_currency(product.price / 100) %>
  </p>

  <p>
    <strong>Sales Count:</strong>
    <%= product.sales_count %>
  </p>

  <p>
    <%= button_to 'Buy Now', checkout_index_path, params: { product_id: product.id }, method: :post, data: { turbo: false } %>
  </p>
</div>
